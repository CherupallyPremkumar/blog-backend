# =============================================================================
# Strapi Backend Environment Variables
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=development

# =============================================================================
# SECRETS (Generate new values for production!)
# =============================================================================
# Generate with: openssl rand -base64 32

APP_KEYS=toBeModified1,toBeModified2,toBeModified3,toBeModified4
API_TOKEN_SALT=tobemodified
ADMIN_JWT_SECRET=tobemodified
TRANSFER_TOKEN_SALT=tobemodified
JWT_SECRET=tobemodified
ENCRYPTION_KEY=tobemodified

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supported clients: postgres, mysql, sqlite

DATABASE_CLIENT=postgres

# PostgreSQL / MySQL Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi

# SSL Configuration (required for cloud databases like Supabase)
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# Optional: Use connection string instead (overrides individual settings)
# DATABASE_URL=postgres://user:password@host:port/database?sslmode=require

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# OPTIONAL - CLOUD STORAGE (for production file uploads)
# =============================================================================
# AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# Cloudinary
# CLOUDINARY_NAME=
# CLOUDINARY_KEY=
# CLOUDINARY_SECRET=

# =============================================================================
# OPTIONAL - EMAIL CONFIGURATION (for password reset, etc.)
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# OPTIONAL - RATE LIMITING
# =============================================================================
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
