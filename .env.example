
# Server
HOST=0.0.0.0
PORT=1337

# Secrets (Generate using: openssl rand -base64 32)
# IMPORTANT: Use different keys for development and production
APP_KEYS=REPLACE_WITH_YOUR_APP_KEYS_COMMA_SEPARATED
API_TOKEN_SALT=REPLACE_WITH_YOUR_API_TOKEN_SALT
ADMIN_JWT_SECRET=REPLACE_WITH_YOUR_ADMIN_JWT_SECRET
TRANSFER_TOKEN_SALT=REPLACE_WITH_YOUR_TRANSFER_TOKEN_SALT
ENCRYPTION_KEY=REPLACE_WITH_YOUR_ENCRYPTION_KEY
JWT_SECRET=REPLACE_WITH_YOUR_JWT_SECRET

# Database - Supabase PostgreSQL
DATABASE_CLIENT=postgres
DATABASE_HOST=your-project.supabase.co
DATABASE_PORT=6543
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres.your-project-id
DATABASE_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true  # IMPORTANT: Set to true for production
DATABASE_SCHEMA=public

# Production Settings
PUBLIC_URL=https://api.yourdomain.com
TRUST_PROXY=true
NODE_ENV=production

# CORS Configuration (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Cloudinary (if using)
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_KEY=your_api_key
CLOUDINARY_SECRET=your_api_secret

# Optional: Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_DURATION=60000

# Optional: Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000
